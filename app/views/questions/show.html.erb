<div class="lead well">
  <div class="media">
    <div class="media-left">
      <a href="#">Photo Paperclip</a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= @question.email %></h4>
      <%= @question.body %>
    </div>
  </div>
</div>

<div class="content">
  <%= link_to "Give Answer", "#", {class: 'btn btn-success navbar-btn', data: {toggle: 'modal', target: '#new-answer-modal'}} %>
  <%= render "shared/new_answer_form" %>

  <% @answers.each do |answer| %>
      <div class="media">
        <div class="media-left">
          <a href="">image</a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"> <%= answer.email %> answered:</h4>
          <div><%= time_ago_in_words answer.created_at %> ago</div>
          <%= answer.body %>
        </div>
      </div>
  <% end %>
</div>